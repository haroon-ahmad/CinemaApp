<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haroonahmad.javarea10.ConfigureRoom">



    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchboardGridView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/addSwitchBoard"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/addSwitchBoard"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/imagebtn"
        android:text="Add"
        android:onClick="addSwitchBoardClick"
        android:layout_height="50dp"
        android:layout_width="90dp" />

</RelativeLayout>
