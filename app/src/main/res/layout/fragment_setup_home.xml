<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haroonahmad.javarea10.SetupActivity.setup_home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setupbottomtext"
        android:layout_above="@+id/setupaddroom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <Button
        android:text="Add Room"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:id="@+id/setupaddroom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:background="@drawable/imagebtn"
        android:onClick="addRoomClicked"
        android:layout_width="100dp" />

    <Button
        android:text="Finish"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@+id/setupbottomtext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:id="@+id/setupfinish"
        android:onClick="finishClicked"
        android:background="@drawable/imagebtn" />

    <TextView
        android:text="Your Rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/setupbackgroundimage"
        android:layout_alignStart="@+id/setupbottomtext"
        android:layout_marginTop="20dp"
        android:id="@+id/setuptoptext" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SetupRoomGrid"
        android:layout_alignParentStart="true"
        android:numColumns="3"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:layout_above="@+id/setupaddroom"
        android:layout_below="@+id/setuptoptext" />


</RelativeLayout>
