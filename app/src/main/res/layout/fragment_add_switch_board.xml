<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.haroonahmad.javarea10.AddSwitchBoard">
    
    <Button
        android:layout_width="200dp"
        android:text="Search Switch Boards"
        android:id="@+id/searchBorad"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/imagebtn"
        android:onClick="searchBoardClick"
        android:layout_height="50dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/searchBorad"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button" />

    <Button
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="Done"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/imagebtn"
        android:onClick="doneBtnClick" />

</RelativeLayout>
