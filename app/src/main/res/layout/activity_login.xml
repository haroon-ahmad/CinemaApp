<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/umarback"
    tools:context="com.example.haroonahmad.javarea10.LoginSignup.Login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignStart="@+id/Fusername"
        android:textColor="?attr/colorPrimary" />

    <ImageView
        app:srcCompat="@drawable/pass"
        android:id="@+id/imageView11"
        android:layout_above="@+id/button7"
        android:layout_alignStart="@+id/imageView10"
        android:layout_marginBottom="45dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <Button
        android:text="Signup"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/button8"
        android:onClick="startsignup"
        android:background="@drawable/imagebtn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button7" />

    <ImageView
        app:srcCompat="@drawable/man"
        android:layout_marginStart="14dp"
        android:id="@+id/imageView10"
        android:layout_above="@+id/imageView11"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Fusername"
        android:textColor="?attr/colorPrimary"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />

    <Button
        android:text="Login"
        android:layout_width="110dp"
        android:id="@+id/button7"
        android:onClick="login"
        android:background="@drawable/imagebtn"
        android:layout_height="50dp"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Don't have an account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
